<% layout('layout/boilerplate') -%>

  <br>
  <h3>Edit Listing</h3>
  <br>

  <form action="/listings/<%= listing._id %>?_method=PUT" method="POST" novalidate class="needs-validation"
    enctype="multipart/form-data">

    <div class="col-md-8 col-lg-10">

      <!-- TITLE -->
      <div class="mb-3">
        <label class="form-lable">Enter title</label>
        <input type="text" name="listing[title]" value="<%= listing.title %>" class="form-control" required>
        <div class="valid-feedback">Title looks good!</div>
        <div class="invalid-feedback">Please enter a short title.</div>
      </div>

      <!-- DESCRIPTION -->
      <div class="mb-3">
        <label class="form-lable">Description</label>
        <textarea name="listing[description]" class="form-control" required><%= listing.description %></textarea>
        <div class="invalid-feedback">Please enter a short description.</div>
      </div>
      <div class="mb-3">
        <p class="fw-bold mb-2 text-secondary">Original Listing Image</p>

        <div class="card shadow-sm p-2" style="max-width: 320px;">
          <img src="<%= OriginalImageUrl %>" alt="listing image" class="img-fluid rounded"
            style="height: 200px; object-fit: cover;" />
        </div>
      </div>


      <!-- IMAGE URL -->
      <div class="mb-3">
        <label class="form-lable">Upload New Image</label>
        <input type="file" name="listing[image][url]" class="form-control" placeholder="Enter Image path">
      </div>

      <!-- IMAGE FILENAME (OPTIONAL BUT SAFE) -->
      <input type="hidden" name="listing[image][filename]" value="">

      <div class="row">

        <!-- PRICE -->
        <div class="mb-3 col-md-4">
          <label class="form-lable">Price</label>
          <input type="number" name="listing[price]" value="<%= listing.price %>" class="form-control" min="0" required>
          <div class="invalid-feedback">Please enter a valid price.</div>
        </div>

        <!-- COUNTRY -->
        <div class="mb-3 col-md-8">
          <label class="form-lable">Country</label>
          <input type="text" name="listing[country]" value="<%= listing.country %>" class="form-control" required>
          <div class="invalid-feedback">Please enter a valid country name.</div>
        </div>

      </div>

      <!-- LOCATION -->
      <div class="mb-3">
        <label class="form-lable">Location</label>
        <input type="text" name="listing[location]" value="<%= listing.location %>" class="form-control" required>
        <div class="invalid-feedback">Please enter a valid location.</div>
      </div>

      <br>
      <button class="btn btn-dark add-btn">Update</button>
      <br>

    </div>

    <br><br>
  </form>

  <script src="/js/script.js"></script>